# Server Configuration
PORT=3000
DEBUG=false

# HubSpot Configuration
# Get your access token from HubSpot App Settings
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token_here

# Optional: HubSpot webhook signature verification
# Only set this if you want to verify webhook signatures
# Get this from your webhook settings in HubSpot
# HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret_here

# Optional: Filter tickets by specific criteria
# Leave empty to process all tickets
HUBSPOT_PIPELINE_ID=
HUBSPOT_TICKET_STATUS=
HUBSPOT_TICKET_PRIORITY=
HUBSPOT_TICKET_CATEGORY=

# Optional: Add a note to HubSpot ticket with Linear issue link
# Set to 'true' to add notes, or leave empty/false to skip
UPDATE_HUBSPOT_WITH_LINEAR_LINK=true

# Linear Configuration
# Get your API key from Linear Settings > API > Personal API Keys
LINEAR_API_KEY=your_linear_api_key_here

# Your team ID or team key (both work!)
# Use the team key (e.g., "AUT", "ENG") from your Linear URL: https://linear.app/[team-key]/...
# Or use the full UUID if you prefer
LINEAR_TEAM_ID=your_team_key_or_uuid_here

# Optional: Comma-separated list of label IDs to add to created issues
LINEAR_LABEL_IDS=

